<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    style="@style/LayoutStyle"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/listview_side_margin"
        android:layout_marginEnd="@dimen/listview_side_margin"
        android:scrollbars="vertical" />

    <FrameLayout
        android:id="@+id/emptyViewContainer"
        android:visibility="gone"
        android:layout_width="@dimen/empty_list_view"
        android:layout_height="@dimen/empty_list_view"
        android:layout_gravity="center_horizontal"

        />

</FrameLayout>
